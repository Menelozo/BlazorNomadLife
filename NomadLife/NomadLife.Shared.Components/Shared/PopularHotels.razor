<div class="right-box">
    <h3 class="m-0 text-center py-3 bg-white heading">Popular Hotels</h3>
    <div class="popular-hotels-list">
        @foreach (var b in PopularHotelsList)
        {
            <div class="popular-hotel-item">
                <a href="/hotels/@b.Id" title="@b.Title">
                    <img src="@b.Image" alt="@b.Title" class="me-3" />
                </a>
                <div class="d-flex flex-column justify-content-center">
                    <a href="/hotels/@b.Id" class="hotel-title" title="@b.Title">@b.Title</a>
                    <a href="/authors/@b.Author.Slug/hotels" title="Hotels by @b.Author.Name" class="hotel-author">
                        by @b.Author.Name
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@code{
    [Parameter, EditorRequired]
    public HotelListDto[] PopularHotelsList { get; set; } = [];
}